<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            width: 100%;
            height: 100svh;
            background-color: #121212;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            /*           min    current   max */
            width: clamp(400px, 500px,    700px);
            height: auto;
            border-radius: 10%;

        }

        .container h1 {
            font-weight: 700;
        }

        .container p {
            font-weight: 300;
        }

        .container :where(h1, p) {
            text-align: center;
            color: white;
        }
    </style>
    <link rel="stylesheet" href="../../styles/global.css">
